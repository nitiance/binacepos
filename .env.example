# Public env vars for Vite builds (safe to expose in the client bundle)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Canonical public web URL for receipt verification links/QR codes
# Example: https://binacepos.vercel.app
VITE_PUBLIC_APP_URL=

# Optional: enable 'Try Live Demo' provisioning UI (demo deployment only)
VITE_DEMO_MODE=

# Optional: enable Cloudflare Turnstile captcha on demo provisioning (recommended for production demo).
# Get a site key from Cloudflare Turnstile and set the matching secret in the Supabase Edge Function env as TURNSTILE_SECRET_KEY.
VITE_TURNSTILE_SITE_KEY=

# Optional: allow external time fallback (worldtimeapi). Disabled by default because it is often blocked/unreliable.
VITE_ENABLE_EXTERNAL_TIME=
